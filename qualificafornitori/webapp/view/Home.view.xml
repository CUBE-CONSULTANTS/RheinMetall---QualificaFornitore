<mvc:View
	controllerName="qualificafornitori.qualificafornitori.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	>
	<Page
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiResponsivePadding--content"
		floatingFooter="true"
	>
	
		<customHeader>
			<Bar>
				<contentLeft>
					<Title
						text="{i18n>titleprogetto}"
						titleStyle="H3"
					/>
				</contentLeft>
				<contentRight>
					<Image
							alt="Rheinmetall Logo"	
							height="38.00000000px"
							width="100%"
							src="../public/images/Rheinmetall_Logo_2021.jpg"
					>
					</Image>
				</contentRight>
			</Bar>
		</customHeader>

		<OverflowToolbar
			design="Solid"
			class="sapUiSmallMarginTop"
			height="6vh"
		>
			<ToolbarSpacer />
			<ToolbarSpacer />
			<Image
							alt="Rheinmetall Logo"	
							height="38.00000000px"
							width="92.00000000px"
							src="../public/images/Rheinmetall_Logo_2021.jpg"
					>
			</Image>
			<Text 
				text="{anagraficaModel>/0/nome}"
				visible="false"
				class="title"
			/>
		</OverflowToolbar>
		<VBox width="98%" class="sapUiSmallMarginBeginEnd" 
		>
		<SplitApp class="sapUiSmallMarginTop"	
		id="SplitApp"
		initialDetail="Anagrafica"
		initialMaster="master"
		>
			<masterPages >
				<Page
				id="master"
				backgroundDesign="List"
				showHeader="false"	
				>
				<content>
					<core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.Master" />
				</content>
			</Page>		
			</masterPages>

			<detailPages >
				<Page id="Anagrafica"
				backgroundDesign= "Solid"
				title="Ricerca Fornitore"
      	titleAlignment="Start"
				class="sapUiResponsivePadding--header"
				>
				<content>
			<core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.FilterBar" />
			<core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.RicercaForn" />
				</content>
				</Page>

			 <Page id="Documenti"
			 backgroundDesign= "Solid" 
			 title="Documenti Fornitore -- {anagraficaModel>/0/nome} "
				titleAlignment="Start"
				class="sapUiResponsivePadding--header">
				<content>
					<core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.FilterBar" />
					 <core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.Documenti" />
				</content>
        </Page> 

				<Page id="Template"
			 	backgroundDesign= "Solid" 
			 	title="Nuovi Template Fornitori"
				titleAlignment="Start"
				class="sapUiResponsivePadding--header">
				<content>

					 <core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.Template" />
				</content>
        </Page> 

				<Page id="formAnagrafica"
				backgroundDesign= "Solid"
				title= "Anagrafica fornitore: {anagraficaModel>/0/nome} "
				titleAlignment="Start"
				class="sapUiResponsivePadding--header" >
				<headerContent>
					<Button icon="sap-icon://nav-back" type="Emphasized"
					press="onPressDetailBack" />
				</headerContent>

				<content>
					<core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.Fragment.Anagrafica" />
			 </content>
				</Page>
			</detailPages>
		</SplitApp>
		</VBox>

		<footer class="sapUiLargeMarginTop">
			<OverflowToolbar design="Transparent"></OverflowToolbar>
		</footer>
	
	</Page>
</mvc:View>