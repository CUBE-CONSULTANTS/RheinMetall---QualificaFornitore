<mvc:View controllerName="qualificafornitori.qualificafornitori.controller.Documenti"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="100%"
    displayBlock="true">
    <f:DynamicPage showFooter="true"
        busy="{master>/options/busy}"
        busyIndicatorDelay="0"
        preserveHeaderStateOnScroll="false"
        toggleHeaderOnTitleClick="true">
        <f:header>
          <core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.fragment.documenti.Header"
                type="XML" />
        </f:header>
        <f:content>
            <core:Fragment fragmentName="qualificafornitori.qualificafornitori.view.fragment.documenti.Content"
                type="XML" />
        </f:content>
        <f:footer>
            <OverflowToolbar    
            visible="{= ${userModel>/tipoUtente} === 'Interno' ? true : false }"         
            >
            <Button                    
            icon="sap-icon://nav-back"                    
            text="Indietro"                  
            type="Emphasized"
            press="navToRicercaDoc" 
        />                   
                <ToolbarSpacer
                   />
                   <Button                    
                   icon="sap-icon://save"                    
                   text="Conferma"                  
                   type="Emphasized"
                   press="navToRicercaDoc" 
               />          
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>